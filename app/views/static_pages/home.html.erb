<% if signed_in? %>

    <div class="row">
      <aside class="span4">

        <section>
          <%= render 'shared/user_info' %>
        </section>
        <section>
          <%= render 'shared/stats' %>
        </section>
        <section>
          <%= render 'shared/micropost_form' %>
        </section>

      </aside>
      <div class="span8">
        <h3>Micropost Feed</h3>
        <%= render 'shared/feed' %>
      </div>
    </div>
<% else %>

    <%= render 'shared/carousel' %>

    <div class="center hero-unit">
      <h1></h1>

      <h1>Welcome to the Ruby on Rails Family Social Network</h1>

      <h2>
        This is the home page for the
        <a href="http://railstutorial.org/">Ruby on Rails Family</a>
        sample application.
      </h2>
      <%= link_to "Sign up now!", signup_path,
                  class: "btn btn-large btn-primary" %>
      </div>
    <%= render 'shared/marketing' %>
<% end %>
